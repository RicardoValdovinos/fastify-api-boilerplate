{
	"name": "fastify-api-boilerplate",
	"version": "1.0.0",
	"license": "MIT",
	"engine": "18.17.0",
	"author": "Ricardo Valdovinos <ricardovaldovinos1996@gmail.com>",
	"description": "A production ready, batteries included starter template for Fastify",
	"main": "server.js",
	"type": "module",
	"keywords": [
		"fastify",
		"api",
		"boilerplate",
		"fastify-api-boilerplate",
		"starter",
		"template",
		"typescript",
		"authentication"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/RicardoValdovinos/fastify-api-boilerplate"
	},
	"scripts": {
		"setup": "git init && husky install",
		"kysely:codegen": "kysely-codegen",
		"format": "prettier --write \"src/**/*.ts\"",
		"lint": "eslint src",
		"lint:fix": "eslint src --fix",
		"dev": "cross-env NODE_ENV=development tsx watch src/server.ts",
		"test:unit": "vitest run src/",
		"test:coverage": "c8 tsx src/",
		"build": "tsc -p tsconfig.json",
		"start": "cross-env NODE_ENV=production node dist/src/server.js",
		"clean": "rm -rf dist",
		"commitizen": "exec < /dev/tty && git cz --hook || true",
		"commitlint": "commitlint --edit"
	},
	"dependencies": {
		"@auth/core": "^0.35.0",
		"@fastify/autoload": "^6.0.0",
		"@fastify/caching": "^9.0.0",
		"@fastify/cookie": "^10.0.0",
		"@fastify/cors": "^10.0.0",
		"@fastify/csrf-protection": "^7.0.0",
		"@fastify/env": "^5.0.1",
		"@fastify/formbody": "^8.0.0",
		"@fastify/helmet": "^12.0.0",
		"@fastify/multipart": "^9.0.0",
		"@fastify/rate-limit": "^10.0.1",
		"@fastify/sensible": "^6.0.1",
		"@fastify/swagger": "^9.0.0",
		"@fastify/swagger-ui": "^5.0.1",
		"@fastify/type-provider-typebox": "^5.0.0",
		"@fastify/under-pressure": "^9.0.1",
		"@fastify/websocket": "^11.0.1",
		"@lucia-auth/adapter-sqlite": "^3.0.2",
		"@sinclair/typebox": "^0.33.12",
		"@types/ws": "^8.5.12",
		"arctic": "^1.9.2",
		"better-sqlite3": "^11.3.0",
		"close-with-grace": "^2.1.0",
		"dayjs": "^1.11.13",
		"dotenv": "^16.4.5",
		"fastify": "^5.0.0",
		"fastify-plugin": "^5.0.1",
		"kysely": "^0.27.4",
		"lucia": "^3.2.0",
		"oslo": "^1.2.1",
		"undici": "^6.19.8"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.5.0",
		"@commitlint/config-conventional": "^19.5.0",
		"@eslint/compat": "^1.1.1",
		"@eslint/js": "^9.11.0",
		"@total-typescript/ts-reset": "^0.6.1",
		"@types/better-sqlite3": "^7.6.11",
		"@types/eslint__js": "^8.42.3",
		"@types/node": "^22.5.5",
		"@typescript-eslint/eslint-plugin": "^8.6.0",
		"@typescript-eslint/parser": "^8.6.0",
		"@vitest/coverage-v8": "^2.1.1",
		"commitizen": "^4.3.0",
		"cross-env": "^7.0.3",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "^9.11.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-n": "^17.10.3",
		"eslint-plugin-security": "^3.0.1",
		"eslint-plugin-unicorn": "^55.0.0",
		"globals": "^15.9.0",
		"husky": "^9.1.6",
		"kysely-codegen": "^0.16.8",
		"pino-pretty": "^11.2.2",
		"prettier": "^3.3.3",
		"tsx": "^4.19.1",
		"typescript": "^5.6.2",
		"typescript-eslint": "^8.6.0",
		"vitest": "^2.1.1"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	}
}
