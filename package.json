    "@lucia-auth/adapter-sqlite": "^3.0.2",
    "@sinclair/typebox": "^0.33.12",
    "@types/ws": "^8.5.12",
    "arctic": "^1.9.2",
    "better-sqlite3": "^11.3.0",
    "close-with-grace": "^2.1.0",
    "dotenv": "^16.4.5",
    "fastify": "^5.0.0",
    "fastify-plugin": "^5.0.0",
    "kysely": "^0.27.4",
    "lucia": "^3.2.0",
    "oslo": "^1.2.1",
    "undici": "^6.19.8"
